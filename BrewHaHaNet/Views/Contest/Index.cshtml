@model BrewHaHaNet.ViewModels.ContestListViewModel
@{
  ViewBag.Title = "Brew-Ha-Ha Home Page";
}
@section featured {
  <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                Welcome to the Brew-Ha-Ha, the premier beer-brewing contest of the year!
            </p>
        </div>
    </section>
}
<h3>
  Do you want to:</h3>
<ol class="round">
  <li class="one">
    <h5>
      Start A New Contest</h5>
    @Html.ActionLink("New", "Create")
  </li>
  <li class="two">
    @if (Model.Contests.Any()) {
      <h5>
        Work With Existing Contest:</h5>
      <select class="existing-contests">
        <option value="0">Select a Contest</option>
        @foreach (var contest in Model.Contests) {
          <option value="@contest.Value">@contest.Text</option>
        }
      </select>
      @Html.ActionLink("Continue", "Load", "Contest", new { id = "continue-button" })
    } else {
      <div>
        (No Contests Yet)</div>
    }
  </li>
</ol>
<div class="message-success">@TempData["CreateResult"]</div>
